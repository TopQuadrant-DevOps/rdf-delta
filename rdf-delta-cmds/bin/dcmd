#!/usr/bin/env bash

## Usage: dcmd <delta_main>
## Sets up the java enviroment to run a command from RDF Delta.

CP=

#JENA_CP="$(jena)"
## If Jena development, this needs to be different.
JENA_CP="$HOME/jlib/fuseki2/fuseki-server.jar"

## Log4j
LOG4J_CP="/home/afs/.m2/repo/org/slf4j/slf4j-log4j12/1.7.21/slf4j-log4j12-1.7.21.jar:/home/afs/.m2/repo/log4j/log4j/1.2.17/log4j-1.2.17.jar"
## JUL
JUL_CP="/home/afs/.m2/repo/org/slf4j/slf4j-jdk14/1.7.13/slf4j-jdk14-1.7.13.jar"

H="$HOME/ASF/rdf-delta"
D=

read -r -d '' VAR << EOM
This is line 1.
This is line 2.
Line 3.
EOM

# Delta modules
read -r -d '' MODULES << EOM
rdf-delta-base rdf-delta-client rdf-delta-server-http
rdf-delta-server-local rdf-delta-system rdf-delta-test
rdf-patch tio dev-rdf-delta
rdf-delta-cmds
EOM

for X in $MODULES
do
    [[ $D = "" ]] || D="$D:"
    D="${D}$H/$X/target/classes"
done    

DELTA_CP="$D"

if [[ -e logging.properties ]]
then
    LOGGING_JUL=-Djava.util.logging.config.file=logging.properties
fi
if [[ -e log4j.properties ]]
then
    LOGGING_LOG4J=-Dlog4j.configuration=file:log4j.properties
fi

if [[ $# = 0 ]]
then
    echo "Commands: mksrc, rmsrc, list" 1>&2
    ##echo "Class path: $DELTA_CP:${JENA_CP}"
    exit
    #echo "No class to run" 1>&2
    #exit 1
else
    CMD="$1"
    shift
fi

# Map CMD to class name
DMCD_PKG="org.seaborne.delta.cmds"

# Alternative names.
case $CMD in
    appendpatch)
	CMD=addpatch ;;
    mk)
	CMD=mksrc ;;
    rm)
	CMD=rmsrc ;;
    *) ;;
esac

# Map to class name.
case $CMD in
    "")
    ;;
    mksrc | rmsrc | list | addpatch | getpatch )
	CMD_CLS="$DMCD_PKG"."$CMD"
	;;
    ls)
        CMD_CLS="${DMCD_PKG}.list"
	;;
    rdf2patch)
	CMD_CLS="$DMCD_PKG"."$CMD"
	;;
    patchserver)
	CMD_CLS="org.seaborne.delta.server.http.CmdDeltaServer"
	;;
    org.seaborne.delta.*)
	CMD_CLS=$CMD
	;;
    *)
	echo "Unknown command $CMD" 2>&1
	exit 1
    ;;

esac

## echo "DELTA_CP=$DELTA_CP"
## echo "JENA_CP=$JENA_CP"
## echo java $JVM_ARGS $LOGGING -cp "$DELTA_CP:${JENA_CP}" "$CLASS" "$@"

# Add CMD to org.seaborne.delta.cmds.rdf2patch.CMD

java $JVM_ARGS $LOGGING_LOG4J $LOGGING_JUL -cp "$DELTA_CP:${JENA_CP}" "$CMD_CLS" "$@"
